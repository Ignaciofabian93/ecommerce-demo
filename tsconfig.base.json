{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@graphql-client/button": ["libs/ui/button/src/index.ts"],
      "@graphql-client/carousel": ["libs/ui/carousel/src/index.ts"],
      "@graphql-client/cart-context": ["libs/context/cart-context/src/index.ts"],
      "@graphql-client/catalogue": ["libs/ui/catalogue/src/index.ts"],
      "@graphql-client/categories": ["libs/ui/categories/src/index.ts"],
      "@graphql-client/footer": ["libs/ui/footer/src/index.ts"],
      "@graphql-client/graphql": ["libs/graphql/src/index.ts"],
      "@graphql-client/graphql/server": ["libs/graphql/src/server.ts"],
      "@graphql-client/hero": ["libs/ui/hero/src/index.ts"],
      "@graphql-client/icons": ["libs/constants/icons/src/index.ts"],
      "@graphql-client/images": ["libs/constants/images/src/index.ts"],
      "@graphql-client/navigation": ["libs/ui/navigation/src/index.ts"],
      "@graphql-client/product-card": ["libs/ui/product-card/src/index.ts"],
      "@graphql-client/search": ["libs/ui/search/src/index.ts"],
      "@graphql-client/search-results": ["libs/ui/search-results/src/index.ts"],
      "@graphql-client/types": ["libs/types/src/index.ts"],
      "@graphql-client/types/server": ["libs/types/src/server.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
